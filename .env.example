# ==========================================
# Pulseboard Environment Configuration
# ==========================================
# Copy this file to .env and customize for your environment

# ==========================================
# Application Environment
# ==========================================
APP_ENV=production

# ==========================================
# Database Configuration
# ==========================================
# For local development
DATABASE_URL=sqlite:///./pulseboard.db
# For Docker (use absolute path in container)
# DATABASE_PATH=/app/data/pulseboard.db

# ==========================================
# API Configuration
# ==========================================
API_HOST=0.0.0.0
API_PORT=8000

# Enable auto-reload for development (set to false in production)
API_RELOAD=false

# ==========================================
# CORS Configuration
# ==========================================
# For development (allow localhost)
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000", "http://localhost:80", "http://localhost"]

# For production (replace with your domain)
# CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# ==========================================
# Data Hub Configuration
# ==========================================
# How long to keep feed data in memory (minutes)
HISTORY_WINDOW_MINUTES=10

# ==========================================
# Logging Configuration
# ==========================================
# Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ==========================================
# Docker Configuration (for docker-compose)
# ==========================================
# Backend service port mapping
BACKEND_PORT=8000

# Frontend service port mapping
FRONTEND_PORT=80

# Frontend API URL (for browser connections)
# For Docker: use host machine's IP or domain
VITE_API_URL=http://localhost:8000

# ==========================================
# Feed Defaults (Optional)
# ==========================================
# These can be overridden in individual feed configurations

# System metrics polling interval (seconds)
SYSTEM_METRICS_INTERVAL=5

# HTTP JSON feed polling interval (seconds)
HTTP_POLL_INTERVAL=10

# Cryptocurrency price update interval (seconds)
CRYPTO_PRICE_INTERVAL=60
